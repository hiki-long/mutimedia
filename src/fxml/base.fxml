<AnchorPane fx:id="whole" fx:controller="controller.MainController" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox fx:id="bk" prefWidth="1280" prefHeight="720">
		</VBox>
		<ImageView fx:id="cover" fitWidth="200" fitHeight="200" AnchorPane.leftAnchor="200" AnchorPane.topAnchor="200" preserveRatio="true">
		</ImageView>
		<Button fx:id="prev" text="上一首" prefWidth="60" prefHeight="40" onAction="#Before">
			<AnchorPane.leftAnchor>180</AnchorPane.leftAnchor>
			<AnchorPane.topAnchor>620</AnchorPane.topAnchor>
		</Button>
		<Button fx:id="play" text="播放" prefWidth="60" prefHeight="40" onAction="#PlayMusic">
			<AnchorPane.leftAnchor>260</AnchorPane.leftAnchor>
			<AnchorPane.topAnchor>620</AnchorPane.topAnchor>
		</Button>
		<Button fx:id="after" text="下一首" prefWidth="60" prefHeight="40" onAction="#Next">
